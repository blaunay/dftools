<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="net.sf.graphiti.model.definition">
      <configuration
            extension="design"
            name="IP-XACT"
            type="text/xml"
            validator="net.sf.dftools.architecture.ui.editor.IpXactValidator">
         <graphType
               name="IP-XACT design">
         </graphType>
         <import>
            <transformation
                  class="net.sf.dftools.architecture.ui.editor.IpXactImporter">
            </transformation></import>
         <vertexType
               name="ComponentInstance">
            <color
                  blue="210"
                  green="200"
                  red="190">
            </color>
            <shape
                  type="roundedBox">
            </shape>
            <size
                  height="40"
                  width="40">
            </size>
         </vertexType>
         <export>
            <transformation
                  class="net.sf.dftools.architecture.ui.editor.IpXactExporter">
            </transformation>
         </export>
         <vertexType
               name="BusInterface">
            <color
                  blue="100"
                  green="60"
                  red="0">
            </color>
            <shape
                  type="circle">
            </shape>
            <size
                  height="30"
                  width="30">
            </size>
         </vertexType>
         <edgeType
               directed="true"
               name="Connection">
            <parameter
                  name="source port"
                  type="java.lang.String">
            </parameter>
            <parameter
                  name="target port"
                  type="java.lang.String">
            </parameter>
         </edgeType>
      </configuration>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="net.sf.dftools.architecture.ui.ArchitectureCategory"
            name="Architecture">
      </category>
      <wizard
            canFinishEarly="false"
            category="net.sf.dftools.architecture.ui.ArchitectureCategory"
            class="net.sf.dftools.architecture.ui.ArchitectureProjectWizard"
            hasPages="true"
            id="net.sf.dftools.architecture.ui.ArchitectureProjectWizard"
            name="Architecture Project"
            project="true">
      </wizard>
      <wizard
            canFinishEarly="false"
            category="net.sf.dftools.architecture.ui.ArchitectureCategory"
            class="net.sf.dftools.architecture.ui.NewArchitectureWizard"
            hasPages="true"
            id="net.sf.dftools.architecture.ui.NewArchitectureWizard"
            name="Architecture Description (IP-XACT)"
            project="false">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.sf.graphiti.ui.editors.GraphEditor"
            contributorClass="net.sf.graphiti.ui.editors.GraphActionBarContributor"
            default="true"
            id="net.sf.dftools.architecture.ui.editor"
            name="IP-XACT Editor">
      </editor>
   </extension>

</plugin>
